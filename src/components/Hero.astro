---
import type { HeroProps } from "@types";

type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;

// Construct Gmail Compose URL
const gmailComposeURL = `https://mail.google.com/mail/u/0/#inbox?compose=new&fs=1&to=${email}`;
---

<section class="py-24 md:py-16" id="#hero">
  <h1
    class="mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-9xl
         whitespace-normal sm:whitespace-nowrap break-words text-start"
  >
    {name}
  </h1>

  <p
    class="mb-9 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
  >
    {specialty}
  </p>

  <p class="mb-16 text-base font-normal text-neutral md:text-lg">
    {summary}
  </p>

  <div class="flex gap-4">
    {/* Opens Gmail Compose with recipient filled in */}
    <a
      class="inline-block rounded-full bg-primary px-8 py-5 text-sm leading-5 font-semibold text-[#fff]"
      href={gmailComposeURL}
      target="_blank"
      rel="nofollow noopener"
    >
      Get in Touch
    </a>

    {/* Resume Download Button */}
    <a
      class="inline-flex items-center gap-2 rounded-full border border-gray-500 px-6 py-4 text-sm font-semibold text-gray-500 hover:bg-gray-100 hover:text-gray-900"
      href="/PrathvirajFrontendCV.pdf"
      download
    >
      Resume
    </a>
  </div>
</section>
